{
  "presets": [
    "@babel/preset-typescript",
    [
      "@babel/preset-env",
      {
        "useBuiltIns": "entry",
        "shippedProposals": true,
        "corejs": 3,
        "modules": false,
        "targets": {
          "chrome": "70",
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "effector/babel-plugin",
      {
        "factories": [
          "src/factory"
        ]
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        "@babel/preset-react"
      ],
      "plugins": [
        [
          "module-resolver",
          {
            "alias": {
              "@": "./src"
            }
          }
        ],
        "@babel/plugin-transform-modules-commonjs"
      ]
    }
  }
}