{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "src",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ],
      "effector-forms": [
        "../src/index"
      ],
    },
  },
  "include": [
    "./src/**/*"
  ],
}